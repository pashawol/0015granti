mixin s-form-body()
	+form-wrap
		+input('Имя','text','Введите имя')
		+input('E-mail','email','mail@mail.ru')
		+input('Телефон','tel','+7 (___) ___-__-__')
		+e.polite.text.text-secondary Нажимая кнопку Вы соглашаетесь на обработку Ваших персональных данных в соответствии с 
			a.text-secondary.tdu(href="#" target="_blank") Политикой конфиденциальности
		+e.btn(type='submit') Отправить заявку 
mixin s-form()
	// start s-form
	+b.s-form#s-form&attributes(attributes)
		.container.section
			+b.section-title.text-center
				block
				.h6 Оставьте свои контактные данные и наши менеджеры свяжутся с вами.
				 
			+s-form-body
	// end s-form
mixin s-form-basket()
	// start s-form
	+b.s-form#s-form&attributes(attributes)
		.container.section
			+b.section-title.text-center
				block
				.h6 Для оформления заказа, заполните поля.
				 
			+s-form-body
	// end s-form